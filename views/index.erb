<html>
<head>
	<title>Sudoku Game</title>
	<!-- link to the CSS stylesheet -->
	<link href="/stylesheets/application.css"rel="stylesheet" type="text/css">
</head>
<body>
	<h1>You are going to die. :)</h1>
	<div id="sudoku">
		<form action="/" method="post">
		<!-- one div for each row -->
		<% 3.times do |row| %>
		<div class='row'>
			<!-- we want to create seperate div elements for boxes to style them using CSS -->
			<% 3.times do |box| %>
				<div class='box'>
				<!-- each box will have nine cells -->
					<% 3.times do |cell_row| %>
						  <div class="cell-row">
						<% 3.times do |cell| %>
						 <div class="cell">
						 	<% cell_index = row * 27 + box * 3 + cell_row * 9 + cell %>
							<% cell_value = cell_value(@current_solution[cell_index]) %>
							<% colour_class = colour_class(@check_solution, 
							@puzzle[cell_index], 
							@current_solution[cell_index], 
							@solution[cell_index]) %>
							<input class="<%= colour_class %>" name="cell[]" type="text" maxlength="1" autocomplete="off" value="<%= cell_value %>" >
					  </div>
				   <% end %>
			     </div>
			  <% end %>
			</div>
		 <% end %>
 	  </div>
    <% end %>
    <button>Check solution</button>
	</form>	
  </div>
  </body>
</html>



