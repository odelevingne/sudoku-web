	<h1>Sudoku is hard</h1>
	<div id="flash">
		<%= flash[:notice] %>
	</div>
	<div class="diffuclty_buttons">
		<form action="/easy" method="post">
			<input type = "submit" value="Easy Game" >			
		</form>

		<form action="/medium" method="post">
			<input type = "submit" value="Medium Game">			
		</form>

		<form action="/hard" method="post">
			<input type = "submit" value="Hard Game">			
		</form>
	<div>
	<div id="sudoku">		
		<form action="/" method="post">
			<% 3.times do |row| %>
				<div class='row'>
					<% 3.times do |box| %>
						<div class='box'>
							<% 3.times do |cell_row| %>
								<div class="cell_row">
									<% 3.times do |cell| %>
										<%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
									<% end %>						 
								</div>
							<% end %>
						</div>
					<% end %>
				</div>
			<% end %>
			<button>Check your solution</button>
		</form>
		<form action="/solution" method="get">
			<input type = "submit" value="I give up!" >	
		</form> 	
		<form action="/reset" method="post">
			<input type = "submit" value="Reset board" >
		</form>
	</div>


